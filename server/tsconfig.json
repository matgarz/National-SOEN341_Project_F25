{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020"],

    // Module Resolution
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Stricter Typechecking
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "prisma/**/*"],
  "exclude": ["node_modules"],
    }
  }
}
